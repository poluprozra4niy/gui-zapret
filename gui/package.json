{
  "name": "zapret-gui",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "description": "Modern GUI for Zapret",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.zapret.gui",
    "asar": false,
    "icon": "zapret.png",
    "win": {
      "icon": "zapret.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "extraResources": [
      {
        "from": "../bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../lists",
        "to": "lists"
      },
      {
        "from": "../",
        "to": ".",
        "filter": [
          "*.bat",
          "LICENSE.txt"
        ]
      }
    ],
    "directories": {
      "output": "zapret-build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ]
  }
}